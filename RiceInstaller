git clone https://aur.archlinux.org/packages/paru-bin && cd paru-bin && makepkg -si && cd ~/dotfiles
paru -S vscodium-bin pfetch
sudo pacman -S firefox alacritty i3 sddm polybar ttf-font-awesome rofi bc picom gnome-screenshot lxappereance firefox telegram-desktop brightnessctl inter-font ttf-font-awesome
cp -r fish ~/.config
cp -r i3 ~/.config
cp -r picom ~/.config
cp -r neofetch ~/.config
cp -r picom ~/.config
cp -r polybar ~/.config
cp -r rofi ~/.config
cp -r gtk-3.0 ~/.config
mkdir ~/Pictures/Walls
cp -r Walls/* ~/Pictures
echo "Rice Installed Successfully"
sudo systemctl enable sddm
sudo systemctl start sddm